<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="media.t3h.com.smartrestaurant">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ListTableActivity"></activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.TableInfoActivity"></activity>
        <activity android:name=".activity.WelcomeActivity"></activity>
        <activity android:name=".activity.IntroFoodDrinkDessertActivity"></activity>
    </application>

</manifest>